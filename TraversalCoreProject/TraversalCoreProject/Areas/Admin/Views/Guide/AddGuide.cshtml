@model EntityLayer.Concrete.Guide
@{
    ViewData["Title"] = "AddGuide";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<head>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.18/dist/sweetalert2.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.18/dist/sweetalert2.min.css">
</head>

<body>
    <h1>Rehber Ekleme Sayfası</h1>

    <form method="post">
        <div class="form-group">
            @Html.Label("Ad Soyad")
            <input type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="form-control text-danger"></span>
        </div>
        <div class="form-group">
            @Html.Label("Görsel")
            <input type="text" asp-for="Image" class="form-control" />
            <span  asp-validation-for="Image" class="form-control text-danger" ></span>
        </div>
        <div class="form-group">
            @Html.Label("InstagramUrl")
            <input type="text" asp-for="InstagramUrl" class="form-control " />
        </div>
        <div class="form-group">
            @Html.Label("TwitterUrl")
            <input type="text" asp-for="TwitterUrl" class="form-control  " />
        </div>
        <div class="form-group">
            @Html.Label("Açıklama")
            <input type="text" asp-for="Descripition" class="form-control text-danger" />
            <span asp-validation-for="Descripition" class="form-control  text-danger"></span>

        </div>
        <br />
        <button id="showToastrBtn" class="btn btn-primary">Oluştur</button>
    </form>


</body>
