@model List<AppUser>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Kullanıcı Listesi</h1>

<table class="table table-bordered">

    <tr>
        <th>Kullanıcı Adı</th>
        <th>Rol Ata</th>
    </tr>
    @for (int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];

        <tr>
            <th>@item.UserName</th>
            <th><a href="/Admin/Role/AssignRole/@item.Id" class="btn btn-outline-warning">Rol Ata</a></th>

        </tr>

    }

</table>

