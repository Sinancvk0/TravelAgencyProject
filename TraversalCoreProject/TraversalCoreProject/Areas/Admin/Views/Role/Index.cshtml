@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Kullanıcı Role Listesi</h1>

@if (Model.Count > 0)
{
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Rol Adı</th>
            <th>Rol Sil</th>
            <th>Rol Güncelle</th>

        </tr>




        @foreach (var item in Model)
        {
            count++;
            <tr>

                <td>@count</td>
                <td>@item.Name</td>
                <td><a href="/Admin/Role/DeleteRole/@item.Id/" class="btn btn-outline-danger">Rolü Sil</a></td>
                <td><a href="/Admin/Role/UpdateRole/@item.Id/" class="btn btn-outline-success">Rolü Güncelle</a></td>
                <td><a href="/Admin/Role/UserList/" class="btn btn-outline-warning">Kullanıcı Rolleri</a></td>

            </tr>

        }
    </table>
}
else
{
    <div>
        <p class="alert alert-danger">

            Kullanıcı  Rolü Bulunamadı
        </p>

    </div>
}
<a href="/Admin/Role/Create/" class="btn btn-outline-primary"> Yeni Kullanıcı Rol Ekle</a>
<a href="/Admin/Role/UserList/" class="btn btn-outline-warning">Kullanıcı Rolleri</a>
